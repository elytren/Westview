<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <title>Reviews</title>
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel&family=Kaushan+Script&display=swap" rel="stylesheet">
   
</head>
<body id="showReview">
    <%- include('../partials/nav.ejs') %>
    <h1 class="text-center text-white py-5" id="review"><%= product.name %> Reviews<br></h1> 
  <div class="container">
    <div class="row">
        <% product.reviews.forEach((r)=>{ %> 
          <div class="col-lg-4 col-sm-6 py-5">
            <div  id="reviewCard" class="card" style="width: 18rem;">
                <div class="card-body text-center">
                  <h5 id="reviewCT" class="card-title text-white"><%= r.title %></h5>
                  <p id="reviewCTXT" class="card-text text-white"><%= r.content %></p>
                  <h6 id="reviewR" class="text-white"><%= r.rating%>/5</h6>
                    <button id="edit" class="btn btn-outline-dark" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample<%= r._id%>" aria-expanded="false" aria-controls="collapseExample">Edit</button>
                    <div class="collapse" id="collapseExample<%= r._id%>">
                        <div class="card card-body">
                            <form action="/wv/<%= decade._id %>/reviews/<%= product._id %>/<%= r._id %>?_method=PUT" method="POST">
                            <label class="visually-hidden">Review:</label>
                            <textarea id="updateC" class="form-control py-2" placeholder="Updated comments" name="content"></textarea>
                            <label class="visually-hidden">Rating:</label>
                            <select id="editSelect" class="form-select" name="rating">
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                            </select>
                            <input id="updateCR" class="btn btn-danger" type="submit" value="Update">
                          </form>
                        </div>
                      </div>
                  <form action="/wv/<%= decade._id %>/reviews/<%= product._id %>/<%= r._id %>?_method=DELETE" method="POST">
                    <input id="delete" class="btn btn-outline-secondary" type="submit" value="Delete">
                  </form> 
                </div>
            </div>
          </div>
        <% }) %>
    </div>
  </div>
<div class="d-flex align-items-center justify-content-center">
<a href="/wv/<%= decade._id %>/reviews/<%= product._id %>/new" class="text-center"><input id="leaveReview" class="btn btn-outline-light" type="submit" value="Leave Review"></a>
</div>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>
</body>
</html>